%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% exl ts=4 sw=4 ft=erlang et

{minimum_otp_vsn, "19.3"}.

{plugins, [
    {rebar3_gpb_plugin, "1.11.8"},
    rebar3_appup_plugin
]}.

{deps, [
    {lager, "3.5.1"},
    {ranch, "1.4.0"}
]}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    {i, "include"},
    {i, "gpb/include"},
    {i, "./_build/default/plugins/gpb/include"},
    {parse_transform, lager_transform}
]}.

{gpb_opts, [
    {module_name_suffix, "_pb"},
    {i, "gpb/proto"},
    % {o, "path/to/out_dir"},   %% both .erl and .hrl are generated here
    {o_erl, "gpb/src"},
    {o_hrl, "gpb/include"},
    {strings_as_binaries, true},
    type_specs
]}.

{shell, [
    {apps, [lager, ranch]},
    {config, "./config/sys.config"}
]}.

{dist_node, [
    {setcookie, 'holtom_game'},
    {name, 'holtom_game@127.0.0.1'}
]}.

{provider_hooks, [
    {pre, [
        {compile, {protobuf, compile}},
        {clena, {protobuf, clean}}
    ]}
]}.

{relx, [
	{release, {holtom_game, "0.1.0"}, [holtom_game, sasl, lager, ranch]},
	{sys_config, "./config/sys.config"},
	{vm_args, "./config/vm.args"},
	{dev_mode, true},
	{include_erts, false},
	{extended_start_script, true}
]}.

{profiles, [
	{prod, [
		{relx, [
			{dev_mode, false},
            {include_erts, true},
            {include_src, false}
		]},
		{erl_opts, [
			no_debug_info,
			warnings_as_errors
		]}
	]}
]}.
